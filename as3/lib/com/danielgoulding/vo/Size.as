package com.danielgoulding.vo {	/**	 * @author danielgoulding	 */	public class Size {		//----------------------------------------------------------------------		//  VARIABLES:		//----------------------------------------------------------------------		private var _width						: Number;		private var _height						: Number;		//----------------------------------------------------------------------		//  CONSTRUCTOR:		//----------------------------------------------------------------------		public function Size( params:Object = null ) {			if ( params )				setProperties( params );		}		//----------------------------------------------------------------------		//  PUBLIC API:		//----------------------------------------------------------------------		public function setProperties( params:Object ):void{			if ( params['width'] != null )				width = params['width'];			if ( params['height'] != null )				height = params['height'];		}		public function toString():String{			return "<Size: width='" + width + "' height='" + height + "' />";		}		//----------------------------------------------------------------------		//  GET / SET:		//----------------------------------------------------------------------		public function get width() : Number {			return _width;		}		public function set width(width : Number) : void {			_width = width;		}		public function get height() : Number {			return _height;		}		public function set height(height : Number) : void {			_height = height;		}	}}